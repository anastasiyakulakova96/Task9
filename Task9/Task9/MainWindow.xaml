<Window x:Class="Task9.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task9"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Button x:Name="bSelectDirectory" Content="Select directory" HorizontalAlignment="Left" Margin="46,66,0,0" VerticalAlignment="Top" Width="104" RenderTransformOrigin="-0.882,0.418" Click="button_ClickSelectDirectory"/>
        <TextBox x:Name="tbPath" HorizontalAlignment="Left" Height="23" Margin="219,66,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <ListBox x:Name="lbFiles" HorizontalAlignment="Left" Height="158" Margin="46,141,0,0" VerticalAlignment="Top" Width="161" SelectionChanged="lbFiles_SelectionChanged"/>
        <Button x:Name="bSelectFiles" Content="Select files" HorizontalAlignment="Left" Margin="46,104,0,0" VerticalAlignment="Top" Width="75" Click="bSelectFiles_Click"/>
        <ListBox x:Name="lbtypes" HorizontalAlignment="Left" Height="100" Margin="394,184,0,0" VerticalAlignment="Top" Width="100"  />

    </Grid>
</Window>
